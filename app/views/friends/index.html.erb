<h1>Friends</h1>
<div class="row mb-3">
  <div class="col-12">
    <%= link_to "Create Friend", new_friend_path, class: "btn btn-success btn-block float-end" %>
  </div>
</div>
<div id="friends">
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col">User</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.id %></td>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
          <td>
            <div class="container">
              <div class="row">
                <div class="col">
                  <div style="display: flex;">
                    <%= link_to "Show", friend, class: "btn btn-primary mr-2" %>
                    <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-warning mx-2" %>
                    <%= button_to "Destroy", friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger ml-2" %>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>